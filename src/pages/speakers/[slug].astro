---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const speakers = await getCollection('speakers');
  return speakers.map((speaker) => ({
    params: { slug: speaker.slug },
    props: { speaker },
  }));
}

const { speaker } = Astro.props;
const { Content } = await speaker.render();

// Get events this speaker has participated in
const allEvents = await getCollection('events');
const speakerEvents = allEvents.filter(event =>
  event.data.speakers.includes(speaker.slug)
).sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const initials = speaker.data.name.split(' ').map(n => n[0]).join('').toUpperCase();
---

<BaseLayout title={speaker.data.name} description={speaker.data.bio}>
  <div class="bg-gradient-to-br from-primary via-primary-dark to-secondary text-white py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        <!-- Avatar -->
        {speaker.data.image ? (
          <img
            src={speaker.data.image}
            alt={speaker.data.name}
            class="w-32 h-32 md:w-40 md:h-40 rounded-full object-cover border-4 border-white/30"
          />
        ) : (
          <div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-white/20 flex items-center justify-center text-white text-4xl md:text-5xl font-bold border-4 border-white/30">
            {initials}
          </div>
        )}

        <div class="text-center md:text-left">
          {speaker.data.isOrganizer && (
            <span class="inline-block px-3 py-1 bg-white/20 rounded-full text-sm mb-3">
              Organizer
            </span>
          )}
          <h1 class="text-4xl md:text-5xl font-bold mb-2">{speaker.data.name}</h1>
          <p class="text-xl text-white/90 mb-1">{speaker.data.title}</p>
          {speaker.data.company && (
            <p class="text-lg text-white/70">{speaker.data.company}</p>
          )}

          <!-- Social Links -->
          <div class="flex justify-center md:justify-start gap-4 mt-6">
            {speaker.data.linkedin && (
              <a
                href={speaker.data.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/80 hover:text-white transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            )}
            {speaker.data.twitter && (
              <a
                href={speaker.data.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/80 hover:text-white transition-colors"
                aria-label="Twitter/X"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            )}
            {speaker.data.github && (
              <a
                href={speaker.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/80 hover:text-white transition-colors"
                aria-label="GitHub"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
            {speaker.data.website && (
              <a
                href={speaker.data.website}
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/80 hover:text-white transition-colors"
                aria-label="Website"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-12">
    <div class="grid lg:grid-cols-3 gap-12">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <h2 class="text-2xl font-bold text-text mb-6">About</h2>
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        {speakerEvents.length > 0 && (
          <div class="bg-background-alt rounded-xl p-6">
            <h3 class="text-xl font-bold text-text mb-4">Events</h3>
            <ul class="space-y-4">
              {speakerEvents.map((event) => (
                <li>
                  <a href={`/events/${event.slug}`} class="block hover:bg-gray-200 p-3 rounded-lg transition-colors -mx-3">
                    <div class="font-semibold text-text">{event.data.title}</div>
                    <div class="text-sm text-text-light">
                      {event.data.date.toLocaleDateString('en-GB', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </div>
                    {event.data.isPast && (
                      <span class="inline-block mt-1 px-2 py-0.5 bg-gray-200 text-gray-600 text-xs rounded">
                        Past
                      </span>
                    )}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div class="container mx-auto px-4 pb-12">
    <a href="/speakers" class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to All Speakers
    </a>
  </div>
</BaseLayout>

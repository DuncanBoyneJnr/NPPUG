---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="Our Sponsors" description="Meet the sponsors who support the Norfolk Power Platform User Group.">
  <Hero
    title="Our Sponsors"
    subtitle="Thank you to the organisations who make our community possible."
  />

  <!-- Current Sponsors -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-text mb-8 text-center">Current Sponsors</h2>

      <div class="max-w-md mx-auto">
        <div class="bg-white rounded-xl shadow-lg border border-border p-8 text-center">
          <div class="h-20 flex items-center justify-center mb-4">
            <img src="/images/sponsors/GTPTech.png" alt="GTP Tech Recruitment" class="max-h-full max-w-full object-contain" />
          </div>
          <p class="text-text-light mb-6">
            Official Recruitment Partner
          </p>

          <div class="space-y-3 text-sm mb-6">
            <a href="https://gtptech.co.uk/" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center text-text-light hover:text-primary transition-colors">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
              gtptech.co.uk
            </a>
            <a href="mailto:recruitment@gtptech.co.uk" class="flex items-center justify-center text-text-light hover:text-primary transition-colors">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              recruitment@gtptech.co.uk
            </a>
            <a href="tel:07307075779" class="flex items-center justify-center text-text-light hover:text-primary transition-colors">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              07307 075779
            </a>
          </div>

          <a
            href="https://www.linkedin.com/company/gtp-tech/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-secondary hover:text-secondary-dark font-medium"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            View on LinkedIn
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Become a Sponsor CTA -->
  <section class="py-16 bg-gradient-to-br from-primary to-secondary text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Interested in Sponsoring?</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Join our sponsors and reach Norfolk's thriving Power Platform community.
      </p>
      <a
        href="/sponsorship"
        class="inline-block bg-white text-primary px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors"
      >
        View Sponsorship Packages
      </a>
    </div>
  </section>
</BaseLayout>

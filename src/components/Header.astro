---
const navLinks = [
  { href: '/', label: 'Home' },
  {
    label: 'About',
    href: '/about',
    children: [
      { href: '/about', label: 'About Us' },
      { href: '/team', label: 'Our Team' },
    ]
  },
  { href: '/events', label: 'Events' },
  { href: '/speakers', label: 'Speakers' },
  {
    label: 'Resources',
    href: '/resources',
    children: [
      { href: '/resources', label: 'All Resources' },
      { href: '/blog', label: 'Blog' },
      { href: '/knowledge-base', label: 'Knowledge Base' },
    ]
  },
  { href: '/sponsors', label: 'Sponsors' },
  { href: '/contact', label: 'Contact' },
];

const allLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About Us' },
  { href: '/team', label: 'Our Team' },
  { href: '/events', label: 'Events' },
  { href: '/speakers', label: 'Speakers' },
  { href: '/resources', label: 'All Resources' },
  { href: '/blog', label: 'Blog' },
  { href: '/knowledge-base', label: 'Knowledge Base' },
  { href: '/sponsors', label: 'Sponsors' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-primary text-white shadow-lg sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-3">
    <!-- Desktop Navigation: Crab first, then all links (Centered) -->
    <div class="hidden md:flex items-center justify-center">
      <!-- Logo first -->
      <a href="/" class="hover:opacity-90 transition-opacity flex items-center mr-6">
        <img src="/images/Logo.png" alt="Norfolk Power Platform User Group" class="h-10 w-auto" />
      </a>

      <!-- All Navigation Links -->
      <div class="flex items-center space-x-1">
        {navLinks.map((link) => (
          link.children ? (
            <div class="relative group">
              <a
                href={link.href}
                class:list={[
                  'px-4 py-2 rounded-lg transition-colors h-10 flex items-center',
                  currentPath === link.href || currentPath.startsWith(link.href + '/') || (link.label === 'Resources' && (currentPath.startsWith('/blog') || currentPath.startsWith('/knowledge-base')))
                    ? 'bg-white/20 font-semibold'
                    : 'hover:bg-white/10',
                ]}
              >
                {link.label}
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
              <div class="absolute left-0 mt-1 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                {link.children.map((child) => (
                  <a
                    href={child.href}
                    class:list={[
                      'block px-4 py-2 text-text hover:bg-background-alt transition-colors first:rounded-t-lg last:rounded-b-lg',
                      currentPath === child.href || currentPath.startsWith(child.href + '/') ? 'bg-primary/10 text-primary font-semibold' : '',
                    ]}
                  >
                    {child.label}
                  </a>
                ))}
              </div>
            </div>
          ) : (
            <a
              href={link.href}
              class:list={[
                'px-4 py-2 rounded-lg transition-colors h-10 flex items-center',
                currentPath === link.href
                  ? 'bg-white/20 font-semibold'
                  : 'hover:bg-white/10',
              ]}
            >
              {link.label}
            </a>
          )
        ))}

        <!-- Dark Mode Toggle (Desktop) -->
        <button
          id="dark-mode-toggle-desktop"
          class="ml-4 p-2 rounded-lg hover:bg-white/10 transition-colors"
          aria-label="Toggle dark mode"
        >
          <!-- Sun icon (shown in dark mode) -->
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
          </svg>
          <!-- Moon icon (shown in light mode) -->
          <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile: Logo and Menu Button -->
    <div class="flex md:hidden items-center justify-between">
      <a href="/" class="hover:opacity-90 transition-opacity">
        <img src="/images/Logo.png" alt="Norfolk Power Platform User Group" class="h-10 w-auto" />
      </a>

      <div class="flex items-center space-x-2">
        <!-- Dark Mode Toggle (Mobile) -->
        <button
          id="dark-mode-toggle-mobile"
          class="p-2 rounded-lg hover:bg-white/10 transition-colors"
          aria-label="Toggle dark mode"
        >
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
          </svg>
          <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
          </svg>
        </button>

        <button
          id="mobile-menu-button"
          class="p-2 rounded-lg hover:bg-white/10 transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-white/20 pt-4">
      {allLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-4 py-2 rounded-lg transition-colors text-center',
            currentPath === link.href
              ? 'bg-white/20 font-semibold'
              : 'hover:bg-white/10',
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Dark mode toggle functionality
  function toggleDarkMode() {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  }

  document.getElementById('dark-mode-toggle-desktop')?.addEventListener('click', toggleDarkMode);
  document.getElementById('dark-mode-toggle-mobile')?.addEventListener('click', toggleDarkMode);
</script>
